<Page x:Class="Snowman.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Snowman"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">

    <Grid>
        <Button x:Name="NormalGameButton"
                Content="NORMAL GAME"
                Click="NormalGameButton_Click"
                Width="200"
                Height="30"
                Margin="300,154,300,266"
               />

        <Button x:Name="BuffedGameButton"
                Content="BUFFED GAME"
                Click="BuffedGameButton_Click"
                Width="200"
                Height="30"
                Margin="300,195,300,225"
               />

        <Button x:Name="SettingsButton"
                Content="SETTINGS"
                Click="SettingsButton_Click"
                Width="200"
                Height="30"
                Margin="300,262,300,158"/>

        <Button x:Name="ExitButton"
                Content="EXIT"
                Click="ExitButton_Click"
                Width="200" 
                Height="30"
                Margin="300,329,300,91"/>
    </Grid>
</Page>
