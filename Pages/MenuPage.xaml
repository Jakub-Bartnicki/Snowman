<Page x:Class="Snowman.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Snowman"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">

    <Grid>
        <Button x:Name="StartGameButton"
                Content="START GAME"
                Click="StartGameButton_Click"
                Width="200"
                Height="30"
                Margin="300,121,300,283"
               />

        <Button x:Name="ScoresButton"
                Click="ScoresButton_Click"
                Content="SCORES" 
                Width="200"
                Height="30"
                Margin="300,169,300,235"/>

        <Button x:Name="SettingsButton"
                Content="SETTINGS"
                Click="SettingsButton_Click"
                Width="200"
                Height="30"
                Margin="300,217,300,187"/>

        <Button x:Name="ExitButton"
                Content="EXIT"
                Click="ExitButton_Click"
                Width="200" 
                Height="30"
                Margin="300,316,300,88"/>
    </Grid>
</Page>
