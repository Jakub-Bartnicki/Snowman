<Page x:Class="Snowman.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Snowman"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

    <Grid>
        <TextBlock Text="Settings Page" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="32" Foreground="White" Margin="0,66,0,0"/>

        <Button x:Name="LightThemeButton"
            Content="LIGHT THEME"
            Click="LightThemeButton_Click"
            Width="200"
            Height="30"
            Margin="300,149,300,271"
            />
        <Button x:Name="DarkThemeButton"
                Content="DARK THEME"
                Click="DarkThemeButton_Click"
                Width="200"
                Height="30"
                Margin="300,195,300,225"
               />
        <Button x:Name="BackButton"
                Content="BACK"
                Click="BackButton_Click"
                Width="200"
                Height="30"
                Margin="300,270,300,150"
               />
    </Grid>
</Page>
